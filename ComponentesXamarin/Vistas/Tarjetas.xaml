                        </StackLayout>

                    </Grid>
                </Frame>
                <Frame Grid.Row="3" Margin="12" CornerRadius="8" BackgroundColor="Firebrick">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Image Source="tarjetascredito.png" Grid.Row="0" Grid.Column="0" Margin="18" Grid.RowSpan="2"/>
